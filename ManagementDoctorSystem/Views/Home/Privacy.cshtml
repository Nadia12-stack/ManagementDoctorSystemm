@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="privacy-section py-5 fade-in">
    <div class="container">
        <div class="row align-items-center">
            
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="mb-4">@ViewData["Title"]</h2>
                <p class="lead">
                    Use this page to detail your site's privacy policy.
                    You can explain how user data is collected, stored, and protected, and clarify any third-party services involved.
                </p>
                <ul class="list-group list-group-flush mt-4">
                    <li class="list-group-item">✔ We respect your privacy and never share your data without consent.</li>
                    <li class="list-group-item">✔ All medical records are stored securely and encrypted.</li>
                    <li class="list-group-item">✔ You can request data deletion or export at any time.</li>
                    <li class="list-group-item">✔ We use cookies only to improve user experience.</li>
                </ul>
            </div>

         
            <div class="col-md-6">
                <div class="image-scroll-css">
                    <div class="bg-img img1"></div>
                    <div class="bg-img img2"></div>
                    <div class="bg-img img4"></div>
                    <div class="bg-img img7"></div>
                    <div class="bg-img img6"></div>
                    <div class="bg-img img8"></div>
                </div>
            </div>
        </div>
    </div>
</section>

