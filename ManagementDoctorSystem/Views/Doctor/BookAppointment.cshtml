@using ManagementDoctorSystem.Models
@model IEnumerable<Doctor>

<h1 class="text-center mb-5 fade-in">Book Appointment</h1>

<section class="filter-bar py-5 bg-light fade-in">
    <div class="container">
        <form>
            <div class="row justify-content-center">
                <div class="col-md-3 mb-3">
                    <input type="text" class="form-control form-control-lg" value="@ViewBag.Name" name="Name" placeholder="Doctor Name">
                </div>
                <div class="col-md-3 mb-3">
                    <input type="text" class="form-control form-control-lg" value="@ViewBag.specialization" name="specialization" placeholder="Specialization">
                </div>
                <div class="col-md-2 mb-3">
                    <button class="btn btn-primary btn-lg w-100" type="submit">Filter</button>
                </div>
            </div>
        </form>
    </div>
</section>

<section class="container py-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 fade-in">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="/img/@item.Img" alt="Doctor Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Specialization: @item.Specialization</p>
                        <a href="/Doctor/CompleteAppointment?doctorId=@item.Id" class="btn btn-primary w-100">Book Appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Pagination -->
    

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</section>
