@using ManagementDoctorSystem.Models
@model IEnumerable<ReservationVM>

@{
    ViewData["Title"] = "Reservations Management";
}

<section class="reservations-section py-5 fade-in">
    <div class="container">
        <h2 class="text-center mb-4">Reservations Management</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded overflow-hidden">
                <thead class="table-primary">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Doctor Name</th>
                        <th>Patient Name</th>
                        <th>Appointment Date</th>
                        <th>Appointment Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DoctorId</td>
                            <td>@item.DoctorName</td>
                            <td>@item.PatientName</td>
                            <td>@item.AppointmentDate.ToString("MM/dd/yyyy")</td>
                            <td>@item.AppointmentTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
