@model PatientVM

<section class="appointment-form-section py-5 fade-in">
    <div class="container">
        <h2 class="text-center mb-4">Complete Appointment with @Model.DoctorName</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        <form method="post" asp-action="CompleteAppointment" asp-controller="Doctor" id="appointmentForm">
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="patientName" class="form-label">Patient Name</label>
                    <input asp-for="patientName" class="form-control form-control-lg" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Doctor Name</label>
                    <input type="text" class="form-control form-control-lg" value="@Model.DoctorName" readonly />
                    <input asp-for="doctorId" type="hidden" />
                </div>

                <div class="col-md-6">
                    <label asp-for="appointmentDate" class="form-label">Appointment Date</label>
                    <input asp-for="appointmentDate" type="date" class="form-control form-control-lg" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="appointmentTime" class="form-label">Appointment Time</label>
                    <input asp-for="appointmentTime" type="time" class="form-control form-control-lg" required />
                </div>

                <div class="col-12 d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-3">Complete Appointment</button>
                    <a href="/Doctor/ReservationsManagement" class="btn btn-outline-secondary btn-lg">Reservations Management</a>
                </div>
            </div>
        </form>
    </div>
</section>
