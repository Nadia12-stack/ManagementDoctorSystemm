@using ManagementDoctorSystem.Models
@model IEnumerable<Doctor>

<h1>Book Appointment</h1>
<section class="py-3 filter-bar">
    <div class="container">

        <div claa="row " style="background-color:rgba(var(--bs-light-rgb) , var(--bs-bg-opacity))!important;"></div>
        <div class="col-12">
            <form>
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" class="form-control" value="@ViewBag.Name" name="Name">
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control" value="@ViewBag.specialization" namespecialization">
                    </div>

                    <div class="col-md-2" style="margin:10px;">
                        <button class="btn btn-primary w-100 " type="submit">Filter</button>
                    </div>
                    </div>
            </form>
        </div>
        

    </div>
</section>
@foreach(var item in Model)
{
    <div class="row">
    <div class="col-md-4 mb-4">
        <div class="card">
            <img class="card-img" src="@item.Img" style="width: 100%; height: auto;" alt="Doctor Image">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Specialization: @item.Specialization</p>
                <a href="#" class="btn btn-primary">Book Appointment</a>
            </div>
        </div>
    </div>
</div>
}

