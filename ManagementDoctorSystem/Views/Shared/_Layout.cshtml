<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagementManagementDoctorSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/img.css" />
    <link rel="stylesheet" href="~/ManagementManagementDoctorSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar custom-navbar navbar-expand-lg">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand fw-bold text-primary" href="#!">Hospital</a>

            <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link active">Home</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacy</a></li>
                <li class="nav-item"><a asp-controller="Doctor" asp-action="BookAppointment" class="nav-link">Book Appointment</a></li>
                <li class="nav-item"><a asp-controller="Doctor" asp-action="ReservationsManagement" class="nav-link">Reservations</a></li>
                <li class="nav-item"><a class="navbar-brand fw-bold text-primary" href="#!">Hospital</a></li>
                <li class="nav-item">
                    <a class="btn btn-signup ms-3" href="#signup">Sign Up</a>
                </li>

            </ul>
        </div>
    </nav>



    <!-- Hero Section -->
    <header class="hero">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xl-6">
                    <div class="hero-content text-center text-white">
                        <h1 class="mb-5">Thank you for choosing our hospital for your healthcare needs.</h1>
                        <form class="form-subscribe" id="contactForm" data-sb-form-api-token="API_TOKEN">
                            <div class="row">
                                <div class="col">
                                    <select class="form-control form-control-lg" id="pageSelector">
                                        <option value="">-- Select a page --</option>
                                        <option value="/Home/Index">Home</option>
                                        <option value="/Doctor/BookAppointment">Book Appointment</option>
                                        <option value="/Doctor/ReservationsManagement">Reservations</option>
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <button class="go-btn btn btn-primary btn-lg" id="submitButton" type="button">Go</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <!-- Footer -->
    <footer class="footer-medical mt-5">
        <div class="container py-5">
            <div class="row">
                <!-- About Section -->
                <div class="col-md-4 mb-4">
                    <h5 class="footer-title"><i class="bi bi-hospital"></i> About Hospital </h5>
                    <p class="footer-text">
                        MediTrust is a modern healthcare platform offering trusted medical services, expert doctors, and easy appointment booking.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="footer-title"><i class="bi bi-link-45deg"></i> Quick Links</h5>
                    <ul class="list-unstyled footer-links">
                        <li><i class="bi bi-info-circle"></i> <a href="#about">About</a></li>
                        <li><i class="bi bi-envelope"></i> <a href="#contact">Contact</a></li>
                        <li><i class="bi bi-file-earmark-text"></i> <a href="#terms">Terms of Use</a></li>
                        <li><i class="bi bi-shield-lock"></i> <a href="#privacy">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4 mb-4">
                    <h5 class="footer-title"><i class="bi bi-chat-dots"></i> Contact Us</h5>
                    <p class="footer-text"><i class="bi bi-envelope-fill"></i> info@meditrust.com</p>
                    <p class="footer-text"><i class="bi bi-telephone-fill"></i> +1 (800) 123-4567</p>
                    <p class="footer-text"><i class="bi bi-geo-alt-fill"></i> 123 Health Street, New York, USA</p>
                </div>
            </div>

            <hr class="footer-divider">

            <div class="text-center footer-copy">
                &copy; Hospital 2025. All rights reserved.
            </div>
        </div>
    </footer>



    <!-- Scripts -->
    <script>
        document.getElementById("submitButton").addEventListener("click", function () {
            var selectedPage = document.getElementById("pageSelector").value;
            if (selectedPage) {
                window.location.href = selectedPage;
            } else {
                alert("Please select a page first.");
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
